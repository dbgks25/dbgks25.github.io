---
layout: null
---
[
  {% for post in site.posts %}
    {
      "id": "{{ post.id | slugify }}",
      "title": {{ post.title | jsonify }},
      "content": {{ post.content | strip_html | jsonify }},
      "summary": {{ post.excerpt | strip_html | jsonify }},
      "tags": "{{ post.tags | join: ' ' }}",
      "url": "{{ post.url | relative_url }}",
      "date": "{{ post.date | date_to_xmlschema }}",
      "type": "post"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
  {% if site.posts.size > 0 and site.projects.size > 0 %},{% endif %}
  {% for project in site.projects %}
    {
      "id": "{{ project.id | slugify }}",
      "title": {{ project.title | jsonify }},
      "content": {{ project.content | strip_html | jsonify }},
      "summary": {{ project.summary | jsonify }},
      "tags": "{{ project.stack | join: ' ' }}",
      "url": "{{ project.url | relative_url }}",
      "date": "{{ project.date | date_to_xmlschema }}",
      "type": "project"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
